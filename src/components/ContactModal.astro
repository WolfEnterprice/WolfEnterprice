---
/**
 * Componente ContactModal - Modal profesional para elegir método de contacto
 */
interface Props {
  name: string;
  email: string;
  phone: string;
  message: string;
  whatsappUrl: string;
  mailtoUrl: string;
}

const { name, email, phone, message, whatsappUrl, mailtoUrl } = Astro.props;
---

<div id="contactModal" class="contact-modal" style="display: none;">
  <div class="modal-overlay" id="modalOverlay"></div>
  <div class="modal-container">
    <div class="modal-header">
      <div class="modal-header-content">
        <img src="/icons/logo.png" alt="WolfEnterprise Logo" class="modal-logo" />
        <h3 class="modal-title">Continuar por WhatsApp</h3>
      </div>
      <button class="modal-close" id="modalClose" aria-label="Cerrar modal">
        <svg aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    
    <div class="modal-content">
      <p class="modal-description">
        Te redirigiremos a WhatsApp para continuar con tu solicitud. 
        Te responderemos lo antes posible.
      </p>
      
      <div class="modal-options">
        <a
          href={whatsappUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="modal-option modal-option-whatsapp modal-option-primary"
          id="whatsappOption"
        >
          <div class="option-icon">
            <svg aria-hidden="true" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
          </div>
          <div class="option-content">
            <h4 class="option-title">Continuar por WhatsApp</h4>
            <p class="option-description">Conversación rápida e inmediata</p>
          </div>
          <div class="option-arrow">
            <svg aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .contact-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-md);
  }

  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(8px);
    animation: fadeIn 0.3s ease-out;
  }

  .modal-container {
    position: relative;
    background: linear-gradient(135deg, var(--color-bg-card) 0%, rgba(21, 21, 32, 0.98) 100%);
    border-radius: 24px;
    border: 1px solid rgba(29, 233, 182, 0.3);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(29, 233, 182, 0.2);
    max-width: 500px;
    width: 100%;
    max-height: 90vh;
    overflow: hidden;
    animation: modalSlideIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    backdrop-filter: blur(20px);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(-20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-xl);
    border-bottom: 1px solid rgba(29, 233, 182, 0.2);
  }

  .modal-header-content {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    flex: 1;
  }

  .modal-logo {
    width: 48px;
    height: 48px;
    object-fit: contain;
    border-radius: 8px;
    filter: drop-shadow(0 2px 8px rgba(29, 233, 182, 0.3));
    flex-shrink: 0;
  }

  .modal-title {
    color: var(--color-text-primary);
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    margin: 0;
  }

  .modal-close {
    background: transparent;
    border: none;
    color: var(--color-text-secondary);
    cursor: pointer;
    padding: var(--spacing-xs);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-fast);
    width: 32px;
    height: 32px;
  }

  .modal-close:hover {
    background: rgba(29, 233, 182, 0.1);
    color: var(--color-text-primary);
    transform: rotate(90deg);
  }

  .modal-close svg {
    width: 20px;
    height: 20px;
  }

  .modal-content {
    padding: var(--spacing-xl);
  }

  .modal-description {
    color: var(--color-text-secondary);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  .modal-options {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .modal-option {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    border-radius: 16px;
    border: 2px solid rgba(29, 233, 182, 0.2);
    background: linear-gradient(135deg, rgba(29, 233, 182, 0.05) 0%, rgba(29, 233, 182, 0.05) 100%);
    text-decoration: none;
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }

  .modal-option::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .modal-option:hover::before {
    left: 100%;
  }

  .modal-option:hover {
    transform: translateY(-4px);
    border-color: rgba(29, 233, 182, 0.5);
    box-shadow: 0 10px 30px rgba(29, 233, 182, 0.3);
  }

  .modal-option-whatsapp:hover {
    background: linear-gradient(135deg, rgba(37, 211, 102, 0.1) 0%, rgba(37, 211, 102, 0.15) 100%);
    border-color: rgba(37, 211, 102, 0.5);
    box-shadow: 0 10px 30px rgba(37, 211, 102, 0.3);
  }

  .modal-option-primary {
    background: linear-gradient(135deg, rgba(37, 211, 102, 0.1) 0%, rgba(37, 211, 102, 0.15) 100%);
    border-color: rgba(37, 211, 102, 0.3);
  }

  .option-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all var(--transition-normal);
  }

  .modal-option-whatsapp .option-icon {
    background: rgba(37, 211, 102, 0.2);
    color: #25d366;
  }


  .modal-option:hover .option-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .option-icon svg {
    width: 24px;
    height: 24px;
  }

  .option-content {
    flex: 1;
    min-width: 0;
  }

  .option-title {
    color: var(--color-text-primary);
    font-size: 1.125rem;
    font-weight: var(--font-weight-semibold);
    margin: 0 0 var(--spacing-xs) 0;
  }

  .option-description {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin: 0;
  }

  .option-arrow {
    width: 24px;
    height: 24px;
    color: var(--color-text-muted);
    flex-shrink: 0;
    transition: transform var(--transition-normal);
  }

  .modal-option:hover .option-arrow {
    transform: translateX(5px);
    color: var(--color-primary);
  }

  .option-arrow svg {
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    .modal-container {
      max-width: 100%;
      border-radius: 20px;
      margin: var(--spacing-md);
    }

    .modal-header {
      padding: var(--spacing-lg);
    }

    .modal-header-content {
      gap: var(--spacing-sm);
    }

    .modal-logo {
      width: 40px;
      height: 40px;
    }

    .modal-title {
      font-size: 1.25rem;
    }

    .modal-content {
      padding: var(--spacing-lg);
    }

    .modal-option {
      padding: var(--spacing-md);
    }

    .option-icon {
      width: 40px;
      height: 40px;
    }

    .option-icon svg {
      width: 20px;
      height: 20px;
    }
  }
</style>

<script>
  // Manejo del modal
  const modal = document.getElementById('contactModal');
  const overlay = document.getElementById('modalOverlay');
  const closeBtn = document.getElementById('modalClose');
  const whatsappOption = document.getElementById('whatsappOption');
  const emailOption = document.getElementById('emailOption');

  function showModal() {
    if (modal) {
      modal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
      // Animación de entrada
      requestAnimationFrame(() => {
        modal.classList.add('modal-visible');
      });
    }
  }

  function hideModal() {
    if (modal) {
      modal.style.display = 'none';
      document.body.style.overflow = '';
      modal.classList.remove('modal-visible');
    }
  }

  // Event listeners
  if (closeBtn) {
    closeBtn.addEventListener('click', hideModal);
  }

  if (overlay) {
    overlay.addEventListener('click', hideModal);
  }

  // Cerrar con ESC
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal && modal.style.display !== 'none') {
      hideModal();
    }
  });

  // Exponer funciones globalmente para usarla desde Contact.astro
  window.showContactModal = showModal;
  window.hideContactModal = hideModal;
</script>


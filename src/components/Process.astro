---
/**
 * Componente Process - Muestra el proceso de trabajo
 */
import { processService } from '../services/processService';

const steps = processService.getProcessSteps();
---

<section id="proceso" class="section process-section">
  <div class="process-background"></div>
  <div class="container">
    <div class="process-header">
      <h2 class="section-title">Nuestro Proceso de Trabajo</h2>
      <p class="section-subtitle">
        Trabajamos con un método probado y transparente que garantiza resultados exitosos. 
        Desde el primer contacto hasta el lanzamiento y más allá, te mantenemos informado en cada paso del camino.
      </p>
    </div>
    <div class="process-steps">
      {steps.map((step, index) => (
        <div class="process-step">
          <div class="process-number-wrapper">
            <div class="process-number">{step.number}</div>
            {index < steps.length - 1 && <div class="process-connector"></div>}
          </div>
          <div class="process-content">
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .process-section {
    background: var(--color-bg-secondary);
    position: relative;
    overflow: hidden;
  }

  .process-background {
    position: absolute;
    width: 800px;
    height: 800px;
    top: 10%;
    right: -400px;
    background: radial-gradient(circle, rgba(29, 233, 182, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(80px);
  }

  .process-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    position: relative;
    z-index: 1;
  }

  @media (min-width: 1024px) {
    .process-header {
      margin-bottom: var(--spacing-2xl);
    }
  }

  .process-steps {
    max-width: 1100px;
    margin: var(--spacing-lg) auto 0;
    position: relative;
    z-index: 1;
  }

  @media (min-width: 1024px) {
    .process-steps {
      margin-top: var(--spacing-xl);
    }
  }

  .process-step {
    display: flex;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
    align-items: start;
    position: relative;
    padding: var(--spacing-md);
    border-radius: 12px;
    transition: all var(--transition-normal);
  }

  @media (min-width: 1024px) {
    .process-step {
      gap: var(--spacing-xl);
      margin-bottom: var(--spacing-xl);
      padding: var(--spacing-lg);
    }
  }

  .process-step:hover {
    background: rgba(29, 233, 182, 0.05);
    transform: translateX(10px);
  }

  .process-step:last-child {
    margin-bottom: 0;
  }

  .process-number-wrapper {
    position: relative;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .process-number {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-bg-primary);
    box-shadow: 0 10px 30px rgba(29, 233, 182, 0.4);
    position: relative;
    z-index: 2;
    transition: all var(--transition-normal);
  }

  .process-step:hover .process-number {
    transform: scale(1.15) rotate(5deg);
    box-shadow: 0 15px 40px rgba(29, 233, 182, 0.6);
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-accent-light));
  }

  .process-step:hover .process-connector {
    opacity: 0.6;
    height: calc(100% + var(--spacing-2xl) + 10px);
  }

  .process-connector {
    width: 2px;
    height: calc(100% + var(--spacing-2xl));
    background: linear-gradient(180deg, var(--color-primary), var(--color-accent));
    margin-top: var(--spacing-sm);
    opacity: 0.3;
    position: relative;
    z-index: 1;
  }

  .process-step:last-child .process-connector {
    display: none;
  }

  .process-content {
    flex: 1;
    padding-top: var(--spacing-sm);
  }

  .process-content h3 {
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-sm);
    font-size: 1.5rem;
  }

  .process-content p {
    color: var(--color-text-tertiary);
    line-height: 1.7;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .process-header {
      margin-bottom: var(--spacing-md);
    }

    .process-steps {
      margin-top: var(--spacing-md);
      max-width: 100%;
    }

    .process-step {
      flex-direction: column;
      text-align: center;
      padding: var(--spacing-md);
      margin-bottom: var(--spacing-md);
      gap: var(--spacing-sm);
    }

    .process-number-wrapper {
      margin: 0 auto;
    }

    .process-number {
      width: 56px;
      height: 56px;
      font-size: 1.375rem;
    }

    .process-connector {
      display: none;
    }

    .process-step:hover {
      transform: translateY(-5px);
      background: rgba(29, 233, 182, 0.08);
    }

    .process-content h3 {
      font-size: 1.25rem;
      margin-bottom: var(--spacing-xs);
    }

    .process-content p {
      font-size: 0.9375rem;
      line-height: 1.6;
    }
  }

  @media (max-width: 480px) {
    .process-header {
      margin-bottom: var(--spacing-sm);
    }

    .process-steps {
      margin-top: var(--spacing-sm);
    }

    .process-step {
      padding: var(--spacing-sm);
      margin-bottom: var(--spacing-sm);
    }

    .process-number {
      width: 48px;
      height: 48px;
      font-size: 1.125rem;
    }

    .process-content h3 {
      font-size: 1.125rem;
    }

    .process-content p {
      font-size: 0.875rem;
    }
  }
</style>


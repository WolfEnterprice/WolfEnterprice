---
/**
 * Componente Team - Muestra el equipo y proyectos
 */
import { githubService } from '../services/githubService';
import ProjectCard from './ProjectCard.astro';

interface TeamMember {
  name: string;
  role: string;
  description: string;
  icon: string;
  image?: string;
}

// Obtener proyectos específicos de GitHub en build time
const projectRepos = [
  'WolfEnterprice/STREAMINGPLUS',
  'WolfEnterprice/Sabores-Del-Monte',
];

let githubProjects: Awaited<ReturnType<typeof githubService.getSpecificRepo>>[] = [];

// Cargar todos los proyectos
for (const repoName of projectRepos) {
  try {
    const project = await githubService.getSpecificRepo(repoName);
    if (project) {
      githubProjects.push(project);
    }
  } catch (error) {
    console.error(`Error loading GitHub project ${repoName}:`, error);
  }
}

// Proyectos de fallback si no se pueden cargar desde GitHub
const fallbackProjects = [
  {
    id: 999999,
    name: 'Streaming Plus',
    description: 'Plataforma de streaming moderna y escalable con integración de APIs y gestión de contenido multimedia.',
    language: 'TypeScript',
    url: 'https://github.com/WolfEnterprice/STREAMINGPLUS',
    updatedAt: new Date().toISOString(),
    previewImage: undefined,
  },
  {
    id: 999998,
    name: 'Sabores Del Monte',
    description: 'Plataforma web para gestión y visualización de productos gastronómicos de la marca Sabores Del Monte.',
    language: 'TypeScript',
    url: 'https://github.com/WolfEnterprice/Sabores-Del-Monte',
    updatedAt: new Date().toISOString(),
    previewImage: undefined,
  },
];

// Usar proyectos de GitHub si existen, sino usar fallback
const allProjects = githubProjects.length > 0 ? githubProjects : fallbackProjects;

const teamMembers: TeamMember[] = [
  {
    name: 'Carlos Alberto Gómez Posada',
    role: 'Desarrollador Full Stack',
    description: 'Estudiante de Ingeniería en Sistemas con experiencia en desarrollo web y backend, integración de APIs, bases de datos y despliegue de aplicaciones. Enfocado en soluciones eficientes, escalables y bien estructuradas.',
    icon: 'code',
    image: '/profiles/Carlos.png',
  },
  {
    name: 'Juan Felipe Henao Tovar',
    role: 'Desarrollador Backend',
    description: 'Estudiante de Ingeniería en Sistemas con enfoque en desarrollo backend, microservicios y APIs RESTful seguras. Especialista en Node.js, bases de datos y arquitecturas escalables.',
    icon: 'code',
    image: '/profiles/Pipe.png',
  },
  {
    name: 'David Josue Solorza Viera',
    role: 'Desarrollador Frontend',
    description: 'Estudiante de Ingeniería en Sistemas con enfoque en desarrollo web frontend. Experiencia en React, Angular y tecnologías modernas para la creación de interfaces profesionales y funcionales.',
    icon: 'code',
    image: '/profiles/Solorza.jpg',
  },
];
---

<section id="equipo" class="section team-section">
  <div class="team-background"></div>
  <div class="container">
    <div class="team-header">
      <h2 class="section-title">Nuestro Equipo</h2>
      <p class="section-subtitle">
        Un equipo apasionado y experimentado dedicado a hacer realidad tus ideas digitales. 
        Cada miembro aporta su expertise para crear soluciones excepcionales.
      </p>
    </div>
    
    <div class="team-grid">
      {teamMembers.map((member) => (
        <div class="card team-card">
          <div class="team-avatar">
            {member.image ? (
              <img 
                src={member.image} 
                alt={member.name}
                class="team-avatar-image"
                loading="lazy"
              />
            ) : (
              <div class="team-avatar-placeholder">
                <svg aria-hidden="true">
                  <use href={`#icon-${member.icon}`}></use>
                </svg>
              </div>
            )}
          </div>
          <h3>{member.name}</h3>
          <p class="team-role">{member.role}</p>
          <p class="team-description">{member.description}</p>
        </div>
      ))}
    </div>

    <div class="projects-header">
      <h2 class="section-title">Proyectos Destacados</h2>
      <p class="section-subtitle">
        Algunos de los proyectos en los que hemos trabajado, cada uno diseñado 
        para cumplir objetivos específicos y generar resultados reales.
      </p>
    </div>

    <div class="projects-grid">
      {allProjects.length > 0 ? (
        allProjects.map((project) => (
          <ProjectCard
            name={project.name}
            description={project.description}
            language={project.language}
            url={project.url}
            previewImage={project.previewImage}
            updatedAt={project.updatedAt}
          />
        ))
      ) : (
        <div class="projects-empty">
          <p>No hay proyectos disponibles en este momento.</p>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .team-section {
    background: var(--color-bg-primary);
    position: relative;
    overflow: hidden;
  }

  .team-background {
    position: absolute;
    width: 800px;
    height: 800px;
    top: 20%;
    left: -400px;
    background: radial-gradient(circle, rgba(29, 233, 182, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(100px);
  }

  .team-header,
  .projects-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    position: relative;
    z-index: 1;
  }

  @media (min-width: 1024px) {
    .team-header,
    .projects-header {
      margin-bottom: var(--spacing-2xl);
    }
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 1024px) {
    .team-grid {
      gap: var(--spacing-xl);
      margin-bottom: var(--spacing-3xl);
    }
  }

  .team-card {
    text-align: center;
    padding: var(--spacing-xl);
    max-width: 380px;
    width: 100%;
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .team-card {
      padding: var(--spacing-2xl);
    }
  }

  .team-avatar {
    margin-bottom: var(--spacing-lg);
  }

  .team-avatar-image {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto;
    display: block;
    box-shadow: 0 10px 30px rgba(29, 233, 182, 0.3);
    border: 3px solid rgba(29, 233, 182, 0.3);
    transition: all var(--transition-normal);
  }

  .team-card:hover .team-avatar-image {
    transform: scale(1.05);
    box-shadow: 0 15px 40px rgba(29, 233, 182, 0.5);
    border-color: rgba(29, 233, 182, 0.6);
  }

  .team-avatar-placeholder {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    box-shadow: 0 10px 30px rgba(29, 233, 182, 0.3);
    padding: var(--spacing-md);
  }

  .team-avatar-placeholder svg {
    width: 60px;
    height: 60px;
    color: var(--color-bg-primary);
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  .team-card h3 {
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
    font-size: 1.5rem;
  }

  .team-role {
    color: var(--color-primary);
    font-weight: var(--font-weight-semibold);
    font-size: 1rem;
    margin-bottom: var(--spacing-md);
  }

  .team-description {
    color: var(--color-text-tertiary);
    line-height: 1.7;
    font-size: 1rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-xl);
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
  }

  .projects-empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--spacing-3xl);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 768px) {
    .team-header,
    .projects-header {
      margin-bottom: var(--spacing-md);
    }

    .team-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
      margin-bottom: var(--spacing-lg);
    }

    .team-card {
      max-width: 100%;
      padding: var(--spacing-md);
    }

    .team-avatar-image {
      width: 64px;
      height: 64px;
    }

    .team-avatar-placeholder {
      width: 64px;
      height: 64px;
      font-size: 2rem;
    }

    .team-card h3 {
      font-size: 1.25rem;
      margin-bottom: var(--spacing-xs);
    }

    .team-role {
      font-size: 0.9375rem;
      margin-bottom: var(--spacing-xs);
    }

    .team-description {
      font-size: 0.9375rem;
      line-height: 1.6;
    }

    .projects-grid {
      gap: var(--spacing-md);
    }

    .project-card {
      max-width: 100%;
      padding: var(--spacing-md);
    }

    .project-card h3 {
      font-size: 1.25rem;
      margin-bottom: var(--spacing-xs);
    }

    .project-card p {
      font-size: 0.9375rem;
      line-height: 1.6;
    }
  }

  @media (max-width: 480px) {
    .team-header,
    .projects-header {
      margin-bottom: var(--spacing-sm);
    }

    .team-grid {
      gap: var(--spacing-sm);
      margin-bottom: var(--spacing-md);
    }

    .team-card,
    .project-card {
      padding: var(--spacing-sm);
    }

    .team-avatar-image {
      width: 56px;
      height: 56px;
    }

    .team-avatar-placeholder {
      width: 56px;
      height: 56px;
      font-size: 1.75rem;
    }

    .team-card h3 {
      font-size: 1.125rem;
    }

    .team-role {
      font-size: 0.875rem;
    }

    .team-description {
      font-size: 0.875rem;
    }

    .projects-grid {
      gap: var(--spacing-sm);
    }

    .project-card h3 {
      font-size: 1.125rem;
    }

    .project-card p {
      font-size: 0.875rem;
    }
  }
</style>


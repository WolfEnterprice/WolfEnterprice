---
/**
 * Componente Team - Muestra el equipo y proyectos
 */

interface TeamMember {
  name: string;
  role: string;
  description: string;
  icon: string;
  image?: string;
}

interface Project {
  name: string;
  description: string;
  category: string;
  image?: string;
}

const teamMembers: TeamMember[] = [
  {
    name: 'Carlos Alberto Gómez Posada',
    role: 'Desarrollador Full Stack',
    description: 'Estudiante de Ingeniería en Sistemas con experiencia en desarrollo web y backend, integración de APIs, bases de datos y despliegue de aplicaciones. Enfocado en soluciones eficientes, escalables y bien estructuradas.',
    icon: 'code',
    image: '/profiles/Carlos.png',
  },
  {
    name: 'Juan Felipe Henao Tovar',
    role: 'Desarrollador Backend',
    description: 'Estudiante de Ingeniería en Sistemas con enfoque en desarrollo backend, microservicios y APIs RESTful seguras. Especialista en Node.js, bases de datos y arquitecturas escalables.',
    icon: 'code',
    image: '/profiles/Pipe.png',
  },
  {
    name: 'David Josue Solorza Viera',
    role: 'Desarrollador Frontend',
    description: 'Estudiante de Ingeniería en Sistemas con enfoque en desarrollo web frontend. Experiencia en React, Angular y tecnologías modernas para la creación de interfaces profesionales y funcionales.',
    icon: 'code',
    image: '/profiles/Solorza.jpg',
  },
];

const projects: Project[] = [
  {
    name: 'E-commerce Moderno',
    description: 'Plataforma de comercio electrónico con integración de pagos y gestión de inventario',
    category: 'E-commerce',
  },
  {
    name: 'Landing Page Corporativa',
    description: 'Sitio web corporativo optimizado para conversión y SEO',
    category: 'Corporativo',
  },
  {
    name: 'Sistema de Gestión',
    description: 'Aplicación web para gestión empresarial con panel administrativo',
    category: 'Sistema',
  },
  {
    name: 'Portfolio Creativo',
    description: 'Sitio web para mostrar trabajos y proyectos de manera impactante',
    category: 'Portfolio',
  },
];
---

<section id="equipo" class="section team-section parallax-section">
  <div class="team-background parallax-slow"></div>
  <div class="container">
    <div class="team-header">
      <h2 class="section-title">Nuestro Equipo</h2>
      <p class="section-subtitle">
        Un equipo apasionado y experimentado dedicado a hacer realidad tus ideas digitales. 
        Cada miembro aporta su expertise para crear soluciones excepcionales.
      </p>
    </div>
    
    <div class="team-grid">
      {teamMembers.map((member, index) => (
        <div class="card team-card animate-on-scroll" style={`transition-delay: ${index * 0.1}s`}>
          <div class="team-avatar">
            {member.image ? (
              <img 
                src={member.image} 
                alt={member.name}
                class="team-avatar-image"
                loading="lazy"
              />
            ) : (
              <div class="team-avatar-placeholder">
                <svg aria-hidden="true">
                  <use href={`#icon-${member.icon}`}></use>
                </svg>
              </div>
            )}
          </div>
          <h3>{member.name}</h3>
          <p class="team-role">{member.role}</p>
          <p class="team-description">{member.description}</p>
        </div>
      ))}
    </div>

    <div class="projects-header">
      <h2 class="section-title">Proyectos Destacados</h2>
      <p class="section-subtitle">
        Algunos de los proyectos en los que hemos trabajado, cada uno diseñado 
        para cumplir objetivos específicos y generar resultados reales.
      </p>
    </div>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <div class="card project-card animate-on-scroll" style={`transition-delay: ${index * 0.15}s`}>
          <div class="project-category">{project.category}</div>
          <h3>{project.name}</h3>
          <p>{project.description}</p>
          <div class="project-link">
            <a href="#contacto">Ver más detalles →</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team-section {
    background: var(--color-bg-primary);
    position: relative;
    overflow: hidden;
  }

  .team-background {
    position: absolute;
    width: 800px;
    height: 800px;
    top: 20%;
    left: -400px;
    background: radial-gradient(circle, rgba(74, 158, 255, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(100px);
  }

  .team-header,
  .projects-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
    position: relative;
    z-index: 1;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-4xl);
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .team-card {
    text-align: center;
    padding: var(--spacing-2xl);
    max-width: 380px;
    width: 100%;
    margin: 0 auto;
  }

  .team-avatar {
    margin-bottom: var(--spacing-lg);
  }

  .team-avatar-image {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto;
    display: block;
    box-shadow: 0 10px 30px rgba(74, 158, 255, 0.3);
    border: 3px solid rgba(74, 158, 255, 0.3);
    transition: all var(--transition-normal);
  }

  .team-card:hover .team-avatar-image {
    transform: scale(1.05);
    box-shadow: 0 15px 40px rgba(74, 158, 255, 0.5);
    border-color: rgba(74, 158, 255, 0.6);
  }

  .team-avatar-placeholder {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-teal));
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    box-shadow: 0 10px 30px rgba(74, 158, 255, 0.3);
    padding: var(--spacing-md);
  }

  .team-avatar-placeholder svg {
    width: 60px;
    height: 60px;
    color: var(--color-bg-primary);
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  .team-card h3 {
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
    font-size: 1.5rem;
  }

  .team-role {
    color: var(--color-primary);
    font-weight: var(--font-weight-semibold);
    font-size: 1rem;
    margin-bottom: var(--spacing-md);
  }

  .team-description {
    color: var(--color-text-tertiary);
    line-height: 1.8;
    font-size: 1.0625rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-xl);
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .project-card {
    padding: var(--spacing-2xl);
    max-width: 580px;
    width: 100%;
    margin: 0 auto;
    position: relative;
  }

  .project-category {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-md);
    background: rgba(74, 158, 255, 0.15);
    border: 1px solid rgba(74, 158, 255, 0.3);
    border-radius: 20px;
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-md);
  }

  .project-card h3 {
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-md);
    font-size: 1.5rem;
  }

  .project-card p {
    color: var(--color-text-tertiary);
    line-height: 1.8;
    font-size: 1.0625rem;
    margin-bottom: var(--spacing-lg);
  }

  .project-link {
    margin-top: auto;
  }

  .project-link a {
    color: var(--color-primary);
    font-weight: var(--font-weight-semibold);
    font-size: 1rem;
    transition: all var(--transition-fast);
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .project-link a:hover {
    color: var(--color-teal);
    gap: var(--spacing-sm);
  }

  @media (max-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 768px) {
    .team-header,
    .projects-header {
      margin-bottom: var(--spacing-xl);
    }

    .team-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
      margin-bottom: var(--spacing-2xl);
    }

    .team-card {
      max-width: 100%;
      padding: var(--spacing-xl);
    }

    .team-avatar-image {
      width: 80px;
      height: 80px;
    }

    .team-avatar-placeholder {
      width: 80px;
      height: 80px;
      font-size: 2.5rem;
    }

    .team-card h3 {
      font-size: 1.375rem;
    }

    .team-description {
      font-size: 1rem;
    }

    .projects-grid {
      gap: var(--spacing-lg);
    }

    .project-card {
      max-width: 100%;
      padding: var(--spacing-xl);
    }

    .project-card h3 {
      font-size: 1.375rem;
    }

    .project-card p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .team-card,
    .project-card {
      padding: var(--spacing-lg);
    }

    .team-avatar-image {
      width: 70px;
      height: 70px;
    }

    .team-avatar-placeholder {
      width: 70px;
      height: 70px;
      font-size: 2rem;
    }
  }
</style>


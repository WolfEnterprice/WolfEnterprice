---
/**
 * Componente Plans - Muestra los planes de precios
 */
import { planService } from '../services/planService';

const plans = planService.getAllPlans();

const getPlanColor = (color: string) => {
  const colors: Record<string, string> = {
    green: 'var(--color-plan-green)', // Verde lima
    yellow: 'var(--color-plan-yellow)', // Amarillo/dorado
    blue: 'var(--color-plan-blue)', // Azul del lobo
    purple: 'var(--color-plan-purple)', // Púrpura
  };
  return colors[color] || colors.blue;
};
---

<section id="planes" class="section plans-section">
  <div class="container">
    <div class="plans-header">
      <h2 class="section-title">Nuestros Planes</h2>
      <p class="section-subtitle">
        Planes claros para crecer. Si ninguno encaja, diseñamos el tuyo.
      </p>
    </div>
    <div class="plans-grid">
      {plans.map((plan) => (
        <div
          class={`card plan-card ${plan.popular ? 'plan-popular' : ''}`}
          style={`--plan-color: ${getPlanColor(plan.color)}`}
        >
          {plan.popular && <div class="plan-badge">⭐ Más Popular</div>}
          <div class="plan-header">
            <h3>{plan.name}</h3>
            <p class="plan-subtitle">{plan.subtitle}</p>
            <p class="plan-description">
              <strong>Ideal para:</strong> {plan.idealFor}
            </p>
          </div>
          <div class="plan-features-section">
            <h4 class="plan-features-title">Incluye:</h4>
            <ul class="plan-features">
              {plan.features.map((feature) => (
                <li>
                  <span class="check-icon">✓</span>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
          <div class="plan-result">
            <strong>Resultado:</strong>
            <p>{plan.result}</p>
          </div>
          <a href="#contacto" class="btn btn-primary plan-cta">
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .plans-section {
    background: var(--color-bg-secondary);
    position: relative;
    overflow: hidden;
  }

  .plans-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(29, 233, 182, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(29, 233, 182, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .plans-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    position: relative;
    z-index: 1;
  }

  @media (min-width: 1024px) {
    .plans-header {
      margin-bottom: var(--spacing-2xl);
    }
  }

  .plans-grid {
    margin-top: var(--spacing-lg);
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-xl);
    align-items: stretch;
  }

  @media (min-width: 1024px) {
    .plans-grid {
      margin-top: var(--spacing-xl);
    }
  }

  .plan-card {
    position: relative;
    padding: var(--spacing-xl);
    transition: all var(--transition-normal);
    background: linear-gradient(135deg, var(--color-bg-card) 0%, rgba(26, 42, 53, 0.95) 100%);
    border: 1px solid rgba(29, 233, 182, 0.2);
    overflow: hidden;
    width: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: 0 4px 25px rgba(29, 233, 182, 0.1);
    min-height: 600px;
  }

  @media (min-width: 1024px) {
    .plan-card {
      padding: var(--spacing-2xl);
    }
  }

  .plan-card::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, var(--plan-color) 0%, transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-normal);
    pointer-events: none;
  }

  .plan-card:hover::after {
    opacity: 0.1;
  }

  .plan-popular {
    border: 2px solid var(--plan-color);
    box-shadow: 0 8px 40px rgba(29, 233, 182, 0.25);
    transform: scale(1.02);
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 8px 40px rgba(29, 233, 182, 0.25);
    }
    50% {
      box-shadow: 0 12px 50px rgba(29, 233, 182, 0.4);
    }
  }

  .plan-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--plan-color);
    color: var(--color-bg-primary);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    z-index: 10;
    white-space: nowrap;
  }


  .plan-header {
    text-align: center;
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-md);
    border-bottom: 2px solid rgba(29, 233, 182, 0.2);
  }

  .plan-header h3 {
    color: var(--plan-color);
    margin-bottom: var(--spacing-xs);
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: var(--font-weight-bold);
    line-height: 1.2;
  }

  .plan-subtitle {
    color: var(--color-text-primary);
    font-size: 0.875rem;
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-sm);
    line-height: 1.4;
  }

  .plan-description {
    color: var(--color-text-secondary);
    font-size: 0.8125rem;
    line-height: 1.5;
    margin-top: var(--spacing-xs);
  }

  .plan-description strong {
    color: var(--color-text-primary);
    font-weight: var(--font-weight-semibold);
  }

  .plan-features-section {
    flex-grow: 1;
    margin-bottom: var(--spacing-md);
  }

  .plan-features-title {
    color: var(--color-text-primary);
    font-size: 0.9375rem;
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-sm);
    text-align: left;
  }

  .plan-features {
    list-style: none;
    padding-top: var(--spacing-xs);
  }

  .plan-features li {
    padding: var(--spacing-sm) 0;
    color: var(--color-text-tertiary);
    display: flex;
    align-items: start;
    gap: var(--spacing-sm);
    font-size: 0.9375rem;
    line-height: 1.6;
    border-bottom: 1px solid rgba(29, 233, 182, 0.1);
  }

  .plan-features li:last-child {
    border-bottom: none;
  }

  .check-icon {
    color: var(--plan-color);
    font-weight: bold;
    font-size: 1.25rem;
    flex-shrink: 0;
    margin-top: 2px;
    filter: drop-shadow(0 0 4px rgba(29, 233, 182, 0.5));
  }

  .plan-result {
    background: rgba(29, 233, 182, 0.05);
    border-left: 3px solid var(--plan-color);
    padding: var(--spacing-sm) var(--spacing-md);
    margin-bottom: var(--spacing-md);
    border-radius: 6px;
  }

  .plan-result strong {
    color: var(--color-text-primary);
    font-size: 0.875rem;
    font-weight: var(--font-weight-semibold);
    display: block;
    margin-bottom: var(--spacing-xs);
  }

  .plan-result p {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0;
  }

  .plan-cta {
    width: 100%;
    margin-top: auto;
    padding: var(--spacing-sm) var(--spacing-md);
  }

  @media (min-width: 1024px) {
    .plans-grid {
      gap: var(--spacing-2xl);
    }

    .plan-card {
      min-height: 600px;
    }
  }

  @media (max-width: 1024px) {
    .plans-grid {
      gap: var(--spacing-lg);
    }

    .plan-card {
      min-height: auto;
    }
  }

  @media (max-width: 768px) {
    .plans-header {
      margin-bottom: var(--spacing-md);
    }

    .plans-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
      max-width: 100%;
    }

    .plan-popular {
      transform: scale(1);
    }

    .plan-card {
      max-width: 100%;
      padding: var(--spacing-md);
    }

    .plan-header {
      margin-bottom: var(--spacing-sm);
      padding-bottom: var(--spacing-sm);
    }

    .plan-header h3 {
      font-size: 1.25rem;
    }

    .plan-subtitle {
      font-size: 0.8125rem;
    }

    .plan-description {
      font-size: 0.75rem;
    }

    .plan-features-title {
      font-size: 0.875rem;
    }

    .plan-result {
      padding: var(--spacing-xs) var(--spacing-sm);
    }

    .plan-result strong,
    .plan-result p {
      font-size: 0.8125rem;
    }

    .plan-features {
      gap: var(--spacing-xs);
    }

    .plan-features li {
      font-size: 0.9375rem;
      padding: var(--spacing-xs) 0;
    }

    .plan-cta {
      margin-top: var(--spacing-sm);
    }
  }

  @media (max-width: 480px) {
    .plans-header {
      margin-bottom: var(--spacing-sm);
    }

    .plans-grid {
      gap: var(--spacing-sm);
    }

    .plan-card {
      padding: var(--spacing-sm);
    }

    .plan-header {
      margin-bottom: var(--spacing-xs);
      padding-bottom: var(--spacing-xs);
    }

    .plan-header h3 {
      font-size: 1.125rem;
    }

    .plan-subtitle {
      font-size: 0.75rem;
    }

    .plan-description {
      font-size: 0.6875rem;
    }

    .plan-features-title {
      font-size: 0.8125rem;
    }

    .plan-result {
      padding: var(--spacing-xs);
    }

    .plan-result strong,
    .plan-result p {
      font-size: 0.75rem;
    }

    .plan-features li {
      font-size: 0.875rem;
    }
  }
</style>


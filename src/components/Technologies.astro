---
/**
 * Componente Technologies - Muestra las tecnologías utilizadas
 */
import { technologyService } from '../services/technologyService';

const technologies = technologyService.getAllTechnologies();
---

<section id="tecnologias" class="section technologies-section">
  <div class="technologies-background"></div>
  <div class="container">
    <div class="technologies-header">
      <h2 class="section-title">Tecnologías que respaldan nuestros resultados</h2>
      <p class="section-subtitle">
        Utilizamos herramientas modernas y probadas para garantizar que tu sitio web sea rápido, 
        seguro y preparado para crecer. Cada tecnología se elige estratégicamente según las necesidades de tu negocio.
      </p>
    </div>
    <div class="grid grid-2 technologies-grid">
      {technologies.map((tech) => (
        <div class="card technology-card">
          <div class="tech-icon-wrapper">
            <svg class="tech-icon" aria-hidden="true">
              <use href={`#icon-${tech.icon}`}></use>
            </svg>
          </div>
          <div class="tech-content">
            <h3>{tech.title}</h3>
            <p class="tech-description">{tech.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .technologies-section {
    position: relative;
    overflow: hidden;
    background: var(--color-bg-primary);
  }

  .technologies-background {
    position: absolute;
    width: 700px;
    height: 700px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: radial-gradient(circle, rgba(191, 255, 0, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(100px);
  }

  .technologies-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    position: relative;
    z-index: 1;
  }

  @media (min-width: 1024px) {
    .technologies-header {
      margin-bottom: var(--spacing-2xl);
    }
  }

  .technologies-grid {
    margin-top: var(--spacing-lg);
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 1024px) {
    .technologies-grid {
      margin-top: var(--spacing-xl);
    }
  }

  @media (max-width: 768px) {
    .technologies-header {
      margin-bottom: var(--spacing-md);
    }

    .technologies-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
      margin-top: var(--spacing-md);
    }

    .technology-card {
      max-width: 100%;
      padding: var(--spacing-md);
      gap: var(--spacing-sm);
    }

    .tech-icon-wrapper {
      width: 64px;
      height: 64px;
      margin-bottom: var(--spacing-xs);
    }

    .tech-icon {
      width: 32px;
      height: 32px;
    }

    .technology-card h3 {
      font-size: 1.25rem;
      margin-bottom: var(--spacing-xs);
    }

    .tech-description {
      font-size: 0.9375rem;
      line-height: 1.6;
    }
  }

  @media (max-width: 480px) {
    .technologies-header {
      margin-bottom: var(--spacing-sm);
    }

    .technologies-grid {
      gap: var(--spacing-sm);
      margin-top: var(--spacing-sm);
    }

    .technology-card {
      padding: var(--spacing-sm);
    }

    .tech-icon-wrapper {
      width: 56px;
      height: 56px;
    }

    .tech-icon {
      width: 28px;
      height: 28px;
    }

    .technology-card h3 {
      font-size: 1.125rem;
    }

    .tech-description {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 480px) {
    .technologies-header {
      margin-bottom: var(--spacing-xl);
    }

    .technology-card {
      padding: var(--spacing-lg);
    }
  }

  .technology-card {
    padding: var(--spacing-xl);
    position: relative;
    transition: all var(--transition-normal);
    max-width: 580px;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  @media (min-width: 1024px) {
    .technology-card {
      padding: var(--spacing-2xl);
      gap: var(--spacing-lg);
    }
  }

  .technology-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(29, 233, 182, 0.2);
  }

  .tech-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, rgba(29, 233, 182, 0.15), rgba(29, 233, 182, 0.1));
    border-radius: 16px;
    border: 1px solid rgba(29, 233, 182, 0.2);
    margin-bottom: var(--spacing-sm);
  }

  .tech-icon {
    width: 40px;
    height: 40px;
    color: var(--color-primary);
    filter: drop-shadow(0 0 10px rgba(29, 233, 182, 0.5));
    transition: transform var(--transition-normal);
  }

  .technology-card:hover .tech-icon {
    transform: scale(1.1);
  }

  .tech-content {
    flex: 1;
  }

  .technology-card h3 {
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-sm) 0;
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: var(--font-weight-semibold);
    line-height: 1.3;
  }

  .tech-description {
    color: var(--color-text-tertiary);
    line-height: 1.7;
    font-size: 1rem;
  }
</style>


    width: 16px;
    height: 16px;
    color: var(--color-text-muted);
    flex-shrink: 0;
    opacity: 0.8;
  }

  .contact-info-inline {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    align-items: center;
    justify-content: center;
    text-align: center;
    padding-top: var(--spacing-md);
  }

  .contact-info-separator {
    display: none;
  }

  .btn-whatsapp-submit {
    background: linear-gradient(135deg, #25d366, #20ba5a);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    width: 100%;
    padding: 0.875rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: var(--font-weight-semibold);
    border: none;
    border-radius: 10px;
    color: white;
    cursor: pointer;
    transition: all var(--transition-normal);
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.25);
    margin-bottom: var(--spacing-lg);
    position: relative;
    overflow: hidden;
  }

  .btn-whatsapp-submit::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .btn-whatsapp-submit:hover::before {
    left: 100%;
  }

  .btn-whatsapp-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.35);
    background: linear-gradient(135deg, #20ba5a, #1ea952);
  }

  .btn-whatsapp-submit:active {
    transform: translateY(0);
    box-shadow: 0 2px 8px rgba(37, 211, 102, 0.3);
  }

  .btn-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
  }

  .message-preview-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-2xl);
  }

  .preview-header {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
    margin-bottom: var(--spacing-lg);
  }

  .preview-header-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 968px) {
    .contact-form-wrapper {
      grid-template-columns: 1fr;
    }

    .message-preview-section {
      border-left: none;
      border-top: 1px solid rgba(255, 255, 255, 0.08);
    }
  }

  @media (max-width: 768px) {
    .contact-header {
      margin-bottom: var(--spacing-xl);
    }

    .contact-content {
      margin-top: var(--spacing-xl);
    }

    .contact-form-container {
      border-radius: 16px;
    }

    .contact-form-section {
      padding: var(--spacing-xl);
    }

    .message-preview-section {
      padding: var(--spacing-xl);
    }

    .form-section-title {
      font-size: 1.5rem;
      margin-bottom: var(--spacing-xs);
    }

    .form-section-subtitle {
      font-size: 0.875rem;
      margin-bottom: var(--spacing-lg);
    }

    .form-group {
      margin-bottom: var(--spacing-md);
    }

    .form-group:last-of-type {
      margin-bottom: var(--spacing-lg);
    }

    .message-preview {
      min-height: 280px;
      padding: var(--spacing-md);
    }

    .preview-header {
      gap: var(--spacing-sm);
      margin-bottom: var(--spacing-md);
      padding-bottom: var(--spacing-md);
    }


    .preview-title {
      font-size: 1rem;
    }

    .preview-subtitle {
      font-size: 0.75rem;
    }

    .contact-info-inline {
      flex-direction: column;
      gap: var(--spacing-sm);
      align-items: center;
      text-align: center;
      padding-top: var(--spacing-md);
    }

    .contact-info-separator {
      display: none;
    }

    .btn-whatsapp-submit {
      padding: 0.75rem 1.25rem;
      font-size: 0.875rem;
      gap: 0.5rem;
    }

    .btn-icon {
      width: 16px;
      height: 16px;
    }
  }

  @media (max-width: 480px) {
    .contact-form-section,
    .message-preview-section {
      padding: var(--spacing-lg);
    }

    .form-section-title {
      font-size: 1.25rem;
    }

    .form-section-subtitle {
      font-size: 0.8125rem;
    }

    .form-group {
      margin-bottom: var(--spacing-sm);
    }

    .form-group input,
    .form-group textarea {
      padding: 0.75rem 0.875rem;
      font-size: 0.875rem;
    }

    .message-preview {
      min-height: 240px;
      padding: var(--spacing-sm);
      border-radius: 12px;
    }

    .preview-content {
      font-size: 0.875rem;
      line-height: 1.65;
    }

  }
</style>


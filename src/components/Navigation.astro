---
/**
 * Componente Navigation - Barra de navegación mejorada
 */
---

<nav class="navigation" id="mainNav">
  <div class="nav-background"></div>
  <div class="nav-overlay" id="navOverlay"></div>
  <div class="container">
    <div class="nav-content">
      <a href="/" class="nav-logo">
        <div class="nav-logo-icon">
          <img src="/icons/logo.png" alt="WolfEnterprice Logo" class="nav-logo-img" />
        </div>
        <span class="nav-logo-text">
          <strong>Wolf</strong><span class="nav-logo-accent">Enterprice</span>
        </span>
      </a>
      <button class="nav-toggle" id="navToggle" aria-label="Toggle navigation" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <ul class="nav-links" id="navLinks">
        <li><a href="#servicios" class="nav-link">Servicios</a></li>
        <li><a href="#planes" class="nav-link">Planes</a></li>
        <li><a href="#tecnologias" class="nav-link">Tecnologías</a></li>
        <li><a href="#proceso" class="nav-link">Proceso</a></li>
        <li><a href="#equipo" class="nav-link">Equipo</a></li>
        <li><a href="#contacto" class="nav-cta">Contacto</a></li>
      </ul>
    </div>
  </div>
</nav>

<script>
  // Efecto de scroll en el navbar
  const nav = document.getElementById('mainNav');
  const navToggle = document.getElementById('navToggle');
  const navLinks = document.getElementById('navLinks');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 100) {
      nav?.classList.add('nav-scrolled');
    } else {
      nav?.classList.remove('nav-scrolled');
    }
    
    lastScroll = currentScroll;
  });

  // Menú hamburguesa para móviles
  const navOverlay = document.getElementById('navOverlay');
  
  if (navToggle && navLinks) {
    let isMenuOpen = false;
    let scrollPosition = 0;
    
    function openMenu() {
      if (isMenuOpen) return;
      
      isMenuOpen = true;
      scrollPosition = window.pageYOffset;
      
      // Asegurar que el menú sea visible con estilos inline
      navLinks.style.display = 'flex';
      navLinks.style.right = '0';
      navLinks.style.visibility = 'visible';
      navLinks.style.opacity = '1';
      navLinks.classList.add('nav-links-open');
      
      navToggle.classList.add('nav-toggle-active');
      navToggle.setAttribute('aria-expanded', 'true');
      nav?.classList.add('nav-menu-open');
      
      if (navOverlay) {
        navOverlay.style.opacity = '1';
        navOverlay.style.visibility = 'visible';
        navOverlay.style.pointerEvents = 'all';
        navOverlay.classList.add('nav-overlay-active');
      }
      
      // Prevenir scroll del body
      document.body.style.overflow = 'hidden';
      document.body.style.position = 'fixed';
      document.body.style.top = `-${scrollPosition}px`;
      document.body.style.width = '100%';
    }
    
    function closeMenu() {
      if (!isMenuOpen) return;
      
      isMenuOpen = false;
      
      // Ocultar menú con estilos inline
      navLinks.style.right = '-100%';
      navLinks.style.visibility = 'hidden';
      navLinks.style.opacity = '0';
      navLinks.classList.remove('nav-links-open');
      
      navToggle.classList.remove('nav-toggle-active');
      navToggle.setAttribute('aria-expanded', 'false');
      nav?.classList.remove('nav-menu-open');
      
      if (navOverlay) {
        navOverlay.style.opacity = '0';
        navOverlay.style.visibility = 'hidden';
        navOverlay.style.pointerEvents = 'none';
        navOverlay.classList.remove('nav-overlay-active');
      }
      
      // Restaurar scroll del body
      document.body.style.overflow = '';
      document.body.style.position = '';
      document.body.style.top = '';
      document.body.style.width = '';
      
      window.scrollTo(0, scrollPosition);
    }
    
    navToggle.addEventListener('click', (e) => {
      e.stopPropagation();
      e.preventDefault();
      if (isMenuOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Cerrar menú al hacer clic en el overlay
    navOverlay?.addEventListener('click', () => {
      closeMenu();
    });

    // Cerrar menú al hacer clic en un enlace
    navLinks.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        // Pequeño delay para permitir la animación
        setTimeout(() => {
          closeMenu();
        }, 100);
      });
    });

    // Cerrar menú con ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isMenuOpen) {
        closeMenu();
      }
    });

    // Prevenir scroll cuando el menú está abierto (solo en el overlay)
    navOverlay?.addEventListener('touchmove', (e) => {
      if (isMenuOpen) {
        e.preventDefault();
      }
    }, { passive: false });
  }
</script>

<style>
  .navigation {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(10, 10, 15, 0.7);
    backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid rgba(29, 233, 182, 0.15);
    padding: var(--spacing-md) 0;
    transition: all var(--transition-normal);
    overflow: hidden;
  }

  .navigation::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .navigation:hover::before,
  .nav-scrolled::before {
    opacity: 1;
  }

  .nav-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(29, 233, 182, 0.05) 0%, transparent 100%);
    opacity: 0;
    transition: opacity var(--transition-normal);
    pointer-events: none;
  }

  .navigation:hover .nav-background,
  .nav-scrolled .nav-background {
    opacity: 1;
  }

  .nav-scrolled {
    background: rgba(10, 10, 15, 0.95);
    border-bottom-color: rgba(29, 233, 182, 0.3);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    padding: var(--spacing-sm) 0;
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .nav-content {
      overflow: visible;
    }
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    text-decoration: none;
    transition: transform var(--transition-fast);
  }

  .nav-logo:hover {
    transform: translateX(2px);
  }

  .nav-logo-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border-radius: 0;
    padding: 0;
    box-shadow: none;
    transition: all var(--transition-normal);
    overflow: visible;
  }

  .nav-logo:hover .nav-logo-icon {
    transform: rotate(5deg) scale(1.05);
    box-shadow: none;
  }

  .nav-logo-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 0;
    background: transparent;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  .nav-logo-text {
    font-size: 1.375rem;
    color: var(--color-text-primary);
    font-weight: var(--font-weight-bold);
    display: flex;
    align-items: baseline;
    gap: 2px;
  }

  .nav-logo-text strong {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-logo-accent {
    color: var(--color-text-secondary);
    font-weight: var(--font-weight-medium);
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: var(--spacing-xs);
    z-index: 1004;
    position: relative;
  }

  .nav-toggle span {
    width: 24px;
    height: 2px;
    background: var(--color-primary);
    border-radius: 2px;
    transition: all var(--transition-normal);
  }

  .nav-toggle-active span:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
  }

  .nav-toggle-active span:nth-child(2) {
    opacity: 0;
  }

  .nav-toggle-active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: var(--spacing-md);
    align-items: center;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    font-size: 0.9375rem;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 6px;
    position: relative;
    transition: all var(--transition-fast);
  }

  .nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
    border-radius: 2px;
    transition: width var(--transition-normal);
  }

  .nav-link:hover {
    color: var(--color-text-primary);
    background: rgba(29, 233, 182, 0.1);
  }

  .nav-link:hover::before {
    width: calc(100% - 16px);
  }

  .nav-cta {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-md);
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    color: var(--color-bg-primary);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    font-size: 0.875rem;
    border-radius: 8px;
    box-shadow: 0 4px 12px rgba(29, 233, 182, 0.3);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }

  .nav-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left var(--transition-slow);
  }

  .nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(29, 233, 182, 0.4);
  }

  .nav-cta:hover::before {
    left: 100%;
  }

  @media (max-width: 1024px) {
    .nav-links {
      gap: var(--spacing-sm);
    }

    .nav-link {
      font-size: 0.875rem;
      padding: var(--spacing-xs);
    }
  }

  @media (max-width: 768px) {
    .navigation {
      display: none;
    }

    .nav-logo-text {
      font-size: 1.125rem;
    }

    .nav-logo-icon {
      width: 50px;
      height: 50px;
    }

  .nav-links {
    position: fixed;
    top: 0;
    right: -100%;
    width: 280px;
    max-width: 85vw;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height para móviles */
    background: var(--color-bg-card);
    backdrop-filter: none;
    flex-direction: column;
    align-items: flex-start;
    padding: var(--spacing-3xl) var(--spacing-xl);
    gap: var(--spacing-lg);
    border-left: 2px solid rgba(29, 233, 182, 0.5);
    box-shadow: -10px 0 50px rgba(0, 0, 0, 0.5);
    transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 9999;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    display: flex !important;
    margin: 0;
    list-style: none;
  }

  .nav-links-open {
    right: 0 !important;
  }

  /* Overlay de fondo cuando el menú está abierto */
  .nav-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    height: 100dvh;
    background: rgba(0, 0, 0, 0.6);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), visibility 0.3s ease;
    z-index: 9998;
    backdrop-filter: none;
    visibility: hidden;
  }

    .nav-links li {
      width: 100%;
      opacity: 1;
      transform: translateX(0);
      transition: opacity 0.2s ease, transform 0.2s ease;
    }

    .nav-link {
      font-size: 1.125rem;
      padding: var(--spacing-sm) var(--spacing-md);
      width: 100%;
      display: block;
      border-radius: 8px;
      color: var(--color-text-primary);
      font-weight: var(--font-weight-semibold);
      transition: all 0.2s ease;
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    }

    .nav-link:hover {
      background: rgba(29, 233, 182, 0.2);
      color: var(--color-primary-light);
      transform: translateX(5px);
      text-shadow: 0 0 10px rgba(29, 233, 182, 0.5);
    }

    .nav-link::before {
      display: none;
    }

    .nav-cta {
      width: 100%;
      text-align: center;
      padding: var(--spacing-sm) var(--spacing-md);
      font-size: 1rem;
      margin-top: var(--spacing-md);
      background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
      color: var(--color-bg-primary);
      font-weight: var(--font-weight-semibold);
    }

    .nav-cta:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(29, 233, 182, 0.4);
    }
  }

  @media (max-width: 480px) {
    .nav-links {
      width: 100%;
      right: -100%;
      padding-top: calc(var(--spacing-3xl) + 60px); /* Espacio para el navbar */
    }

    .nav-logo-text {
      font-size: 1rem;
    }
  }
</style>



---
/**
 * Componente Services - Muestra los servicios principales
 */
import { serviceService } from '../services/serviceService';

const services = serviceService.getAllServices();
---

<section id="servicios" class="section services-section parallax-section">
  <div class="services-background parallax-medium"></div>
  <div class="container">
    <div class="services-header">
      <h2 class="section-title">Nuestros Servicios</h2>
      <p class="section-subtitle">
        Soluciones digitales completas diseñadas para hacer crecer tu negocio. 
        Cada servicio está pensado para darte resultados reales y medibles.
      </p>
    </div>
    <div class="services-grid">
      {services.map((service, index) => (
        <div class="card service-card parallax-fast animate-on-scroll" style={`animation-delay: ${index * 0.1}s`}>
          <div class="service-icon-wrapper">
            <svg class="service-icon" aria-hidden="true">
              <use href={`#icon-${service.icon}`}></use>
            </svg>
            <div class="service-icon-glow"></div>
          </div>
          <h3>{service.title}</h3>
          <p>{service.description}</p>
          <div class="service-cta">
            <a href="#contacto" class="service-link">
              Saber más →
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services-section {
    position: relative;
    overflow: hidden;
    background: var(--color-bg-primary);
  }

  .services-background {
    position: absolute;
    width: 600px;
    height: 600px;
    bottom: -300px;
    left: -200px;
    background: radial-gradient(circle, rgba(0, 212, 255, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(80px);
  }

  .services-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
    position: relative;
    z-index: 1;
  }

  .services-grid {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
    justify-items: center;
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
      max-width: 100%;
    }

    .service-card {
      max-width: 100%;
      padding: var(--spacing-xl);
    }

    .service-icon {
      width: 56px;
      height: 56px;
    }

    .service-card h3 {
      font-size: 1.375rem;
    }

    .service-card p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .services-header {
      margin-bottom: var(--spacing-xl);
    }

    .service-card {
      padding: var(--spacing-lg);
    }

    .service-icon-wrapper {
      margin-bottom: var(--spacing-md);
    }
  }

  .service-card {
    text-align: center;
    padding: var(--spacing-2xl);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    max-width: 380px;
    width: 100%;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-teal), var(--color-accent));
    transform: scaleX(0);
    transition: transform var(--transition-normal);
  }

  .service-card:hover::before {
    transform: scaleX(1);
  }

  .service-icon-wrapper {
    position: relative;
    display: inline-block;
    margin-bottom: var(--spacing-lg);
  }

  .service-icon {
    width: 64px;
    height: 64px;
    position: relative;
    z-index: 2;
    color: var(--color-primary);
    filter: drop-shadow(0 0 10px rgba(74, 158, 255, 0.5));
    transition: transform var(--transition-normal);
  }

  .service-icon-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80px;
    height: 80px;
    background: radial-gradient(circle, rgba(74, 158, 255, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(20px);
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .service-card:hover .service-icon {
    transform: scale(1.15) rotate(10deg);
    filter: drop-shadow(0 0 20px rgba(74, 158, 255, 0.8));
  }

  .service-card:hover .service-icon-glow {
    opacity: 1;
    width: 100px;
    height: 100px;
  }

  .service-card h3 {
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-sm);
    font-size: 1.5rem;
  }

  .service-card p {
    color: var(--color-text-tertiary);
    line-height: 1.8;
    font-size: 1.0625rem;
    flex-grow: 1;
    margin-bottom: var(--spacing-lg);
  }

  .service-cta {
    margin-top: auto;
  }

  .service-link {
    color: var(--color-primary);
    font-weight: var(--font-weight-semibold);
    font-size: 1rem;
    transition: all var(--transition-fast);
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .service-link:hover {
    color: var(--color-teal);
    gap: var(--spacing-sm);
  }
</style>

